generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Surveys
// Questions -> Surveys
// Answers -> Questions

model Survey {
  id    String @id @default(cuid())
  title String

  // Relationships
  Blocks Block[]
}

model Question {
  id       String @id @default(cuid())
  text     String
  ordering Int
  blockId  String

  // Relationships
  block Block @relation(fields: [blockId], references: [id])

  Responses Responses[]
}

model Responses {
  id          String @id @default(cuid())
  text        String
  question_id String

  question Question @relation(fields: [question_id], references: [id])
}

model Block {
  id       String @id @default(cuid())
  ordering Int
  // relational ids
  surveyId String
  survey   Survey @relation(fields: [surveyId], references: [id])

  Question Question[]
}
